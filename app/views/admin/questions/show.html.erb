<h1> <%= @question.test.title %> Question

<p>
  <strong>Body: </strong>
  <%= @question.body %>
</p>

<h2> Answers </h2>

<%= link_to 'New answer',  new_admin_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<p><%= link_to 'Back', admin_test_path(@question.test) %>
   <%= link_to fa_icon('pencil'), edit_admin_question_path(@question), title: 'Edit question' %>
   <%= button_to 'delete', admin_question_path(@question), method: :delete, data: {confirm: 'Are you sure?'}%>
</p>
