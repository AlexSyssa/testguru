<div class="row justify-content-center mt-3">
  <div class="col-8 col—md—4">
    <h1> <%= t('.header')%></h1><br>
    <p>
      <%= link_to t('.new_test'), new_admin_test_path %>
    </p>
    <table class="table table-bordered border-secondary">
      <tr class="table table-primary table-bordered border-secondary" >
        <th class="sort-by-title pointer"><%= t('.table.title')%>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.table.level')%></th>
        <th><%= t('.table.question')%></th>
        <th colspan ="3"> <%= t('.table.action')%> </th>
      </tr>
      <%= render @tests %>
    </table>
  </div>
</div>
