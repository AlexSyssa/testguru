<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <p><%=link_to 'Test Guru', root_path %></p>
      <% if logged_in? %>
      <p class="nav_user"> Welcome, <b><%= current_user.name %></b> Guru</p>
      <p> <%= button_to 'Exit', session_path, method: :delete %></p>
      <% else %>
      <p class="navbar"> <%= link_to 'login', login_path %> </p>
      <p class="navbar"> <%= link_to 'Check-in', signup_path %> </p>
      <% end %>

      <%= yield %>
    </div>
  <%= render 'shared/footer' %>
  </body>
</html>
